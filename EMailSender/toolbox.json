{
  "kind": "category",
  "name": "邮件发送器",
  "icon": "fa-light fa-envelope",
  "colour": "#4CAF50",
  "contents": [
    {
      "kind": "label",
      "text": "初始化"
    },
    {
      "kind": "block",
      "type": "emailsender_create",
      "inputs": {
        "EMAIL_LOGIN": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "your_email@gmail.com"
            }
          }
        },
        "EMAIL_PASSWORD": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "your_password"
            }
          }
        },
        "EMAIL_FROM": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "sender@gmail.com"
            }
          }
        }
      }
    },
    {
      "kind": "block",
      "type": "emailsender_create_with_name",
      "inputs": {
        "EMAIL_LOGIN": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "your_email@gmail.com"
            }
          }
        },
        "EMAIL_PASSWORD": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "your_password"
            }
          }
        },
        "EMAIL_FROM": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "sender@gmail.com"
            }
          }
        },
        "NAME_FROM": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "Your Name"
            }
          }
        }
      }
    },
    {
      "kind": "label",
      "text": "配置"
    },
    {
      "kind": "block",
      "type": "emailsender_configure",
      "inputs": {
        "SMTP_SERVER": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "smtp.gmail.com"
            }
          }
        },
        "SMTP_PORT": {
          "shadow": {
            "type": "math_number",
            "fields": {
              "NUM": 465
            }
          }
        }
      }
    },
    {
      "kind": "block",
      "type": "emailsender_set_secure"
    },
    {
      "kind": "label",
      "text": "邮件消息"
    },
    {
      "kind": "block",
      "type": "emailsender_message_create"
    },
    {
      "kind": "block",
      "type": "emailsender_set_subject",
      "inputs": {
        "SUBJECT": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "邮件主题"
            }
          }
        }
      }
    },
    {
      "kind": "block",
      "type": "emailsender_set_content",
      "inputs": {
        "CONTENT": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "邮件内容"
            }
          }
        }
      }
    },
    {
      "kind": "label",
      "text": "发送邮件"
    },
    {
      "kind": "block",
      "type": "emailsender_send",
      "inputs": {
        "TO": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "recipient@gmail.com"
            }
          }
        }
      }
    },
    {
      "kind": "block",
      "type": "emailsender_send_with_response",
      "inputs": {
        "TO": {
          "shadow": {
            "type": "text",
            "fields": {
              "TEXT": "recipient@gmail.com"
            }
          }
        }
      }
    },
    {
      "kind": "label",
      "text": "响应处理"
    },
    {
      "kind": "block",
      "type": "emailsender_get_status"
    },
    {
      "kind": "block",
      "type": "emailsender_get_code"
    },
    {
      "kind": "block",
      "type": "emailsender_get_description"
    }
  ]
}