{
  "kind": "category",
  "name": "ESP32 SD卡存储",
  "icon": "fa-light fa-sd-card",
  "colour": "#FF9800",
  "contents": [
    {
      "kind": "label",
      "text": "初始化"
    },
    {
      "kind": "block",
      "type": "esp32_sd_begin"
    },
    {
      "kind": "block",
      "type": "esp32_sd_begin_custom",
      "inputs": {
        "CS": {"shadow": {"type": "math_number", "fields": {"NUM": "5"}}},
        "SCK": {"shadow": {"type": "math_number", "fields": {"NUM": "18"}}},
        "MISO": {"shadow": {"type": "math_number", "fields": {"NUM": "19"}}},
        "MOSI": {"shadow": {"type": "math_number", "fields": {"NUM": "23"}}},
        "FREQUENCY": {"shadow": {"type": "math_number", "fields": {"NUM": "4000000"}}}
      }
    },
    {
      "kind": "label",
      "text": "卡信息"
    },
    {
      "kind": "block",
      "type": "esp32_sd_card_info"
    },
    {
      "kind": "label",
      "text": "快速文件操作"
    },
    {
      "kind": "block",
      "type": "esp32_sd_write_file_quick",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/hello.txt"}}},
        "CONTENT": {"shadow": {"type": "text", "fields": {"TEXT": "Hello World"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_read_file_quick",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/hello.txt"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_append_file",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/log.txt"}}},
        "CONTENT": {"shadow": {"type": "text", "fields": {"TEXT": "New data"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_delete_file",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/temp.txt"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_rename_file",
      "inputs": {
        "OLD_PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/old.txt"}}},
        "NEW_PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/new.txt"}}}
      }
    },
    {
      "kind": "label",
      "text": "文件操作"
    },
    {
      "kind": "block",
      "type": "esp32_sd_open_file",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/test.txt"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_close_file"
    },
    {
      "kind": "block",
      "type": "esp32_sd_write_file",
      "inputs": {
        "CONTENT": {"shadow": {"type": "text", "fields": {"TEXT": "Hello SD Card"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_read_file"
    },
    {
      "kind": "block",
      "type": "esp32_sd_file_available"
    },
    {
      "kind": "block",
      "type": "esp32_sd_file_size"
    },
    {
      "kind": "label",
      "text": "目录操作"
    },
    {
      "kind": "block",
      "type": "esp32_sd_create_dir",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/mydir"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_remove_dir",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/mydir"}}}
      }
    },
    {
      "kind": "block",
      "type": "esp32_sd_list_dir",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/"}}},
        "LEVELS": {"shadow": {"type": "math_number", "fields": {"NUM": "0"}}}
      }
    },
    {
      "kind": "label",
      "text": "文件检查"
    },
    {
      "kind": "block",
      "type": "esp32_sd_file_exists",
      "inputs": {
        "PATH": {"shadow": {"type": "text", "fields": {"TEXT": "/test.txt"}}}
      }
    }
  ]
}